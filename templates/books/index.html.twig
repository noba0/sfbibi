{% extends 'base.html.twig' %}

{% block title %}Books index{% endblock %}

{% block body %}
    <h1>Books index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Summary</th>
                <th>Edition</th>
                <th>Author</th>
                <th>Publication_year</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.Title }}</td>
                <td>{{ book.Summary }}</td>
                <td>{{ book.Edition }}</td>
                <td>{{ book.Author }}</td>
                <td>{{ book.PublicationYear ? book.PublicationYear|date('Y-m-d') : '' }}</td>
                <td>{{ book.Image }}</td>
                <td>
                    <a href="{{ path('app_books_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('app_books_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_books_new') }}">Create new</a>
{% endblock %}
